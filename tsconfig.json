{
  "compilerOptions": {
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "exclude": ["node_modules/**/*", ".serverless/**/*"],
  "include": ["./**/*.ts"]
}
